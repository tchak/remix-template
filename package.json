{
  "private": true,
  "name": "remix-template",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:start": "remix dev",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:clean": "del .cache build public/build app/styles",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "build:remix": "remix build",
    "lint": "run-s lint:*",
    "lint:types": "tsc",
    "lint:js": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "size": "run-s build size-limit",
    "size-limit": "size-limit",
    "start": "remix-serve ./build"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.11",
    "@reach/tooltip": "^0.17.0",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "clsx": "^1.2.1",
    "is-hotkey": "^0.2.0",
    "isbot": "^3.5.3",
    "luxon": "^3.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^3.4.7",
    "remix": "*",
    "remix-utils": "^3.3.0",
    "tiny-invariant": "^1.2.0",
    "ts-node": "^10.9.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@size-limit/preset-app": "^8.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/is-hotkey": "^0.1.7",
    "@types/jest": "^29.0.3",
    "@types/luxon": "^3.0.1",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^5.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "size-limit": "^8.1.0",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "size-limit": [
    {
      "path": "public/build/**/*.js"
    }
  ],
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "@remix-run/eslint-config/jest",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-redeclare": "off"
    },
    "settings": {
      "jest": {
        "version": 27
      }
    },
    "overrides": [
      {
        "files": [
          "tailwind.config.js",
          "remix.config.js",
          "jest.config.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
