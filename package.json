{
  "private": true,
  "name": "remix-template",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:start": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:clean": "del .cache build public/build app/styles",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "build:remix": "remix build",
    "lint": "run-s lint:*",
    "lint:types": "tsc",
    "lint:js": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "size": "run-s build size-limit",
    "size-limit": "size-limit",
    "migrate:dev": "yarn prisma migrate dev",
    "migrate:deploy": "yarn prisma migrate deploy",
    "start": "remix-serve ./build",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "3.11.0",
    "@reach/skip-nav": "^0.16.0",
    "@reach/tooltip": "^0.16.2",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "clsx": "^1.1.1",
    "is-hotkey": "^0.2.0",
    "luxon": "^2.3.1",
    "nodemailer": "^6.7.2",
    "prisma": "^3.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.4",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-auth-email-link": "^1.2.0",
    "remix-utils": "^2.8.0",
    "tiny-invariant": "^1.2.0",
    "ts-node": "^10.7.0",
    "use-debounce": "^7.0.1",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.4.2",
    "@remix-run/dev": "^1.2.3",
    "@size-limit/preset-app": "^7.0.8",
    "@types/is-hotkey": "^0.1.7",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^2.3.0",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^4.0.0",
    "del-cli": "^4.0.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typestrict": "^1.0.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "size-limit": "^7.0.8",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "size-limit": [
    {
      "path": "public/build/**/*.js"
    }
  ],
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/strict",
      "prettier"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "remix.config.js",
          "tailwind.config.js",
          "jest.config.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
